<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/color_primary_header"
    android:gravity="center_vertical|center_horizontal"
    tools:context=".CodeActivity">

    <mesaecadeira.com.missao.widgets.FontableTextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="18dp"
        android:textSize="24sp"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/textview_mission"
        app:customFont="@string/font_gotham_bold"
        android:text="@string/title_mission"/>

    <mesaecadeira.com.missao.widgets.FontableTextView
        android:id="@+id/textview_mission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:text="@string/text_mission"/>

</RelativeLayout>
